<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>TransfertServlet</servlet-name>
        <servlet-class>controlleur.TransfertServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlerteServlet</servlet-name>
        <servlet-class>controlleur.AlerteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenouServlet</servlet-name>
        <servlet-class>controlleur.RenouServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionVhServlet</servlet-name>
        <servlet-class>controlleur.GestionVhServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpRecu</servlet-name>
        <servlet-class>controlleur.ImpRecu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadRecu</servlet-name>
        <servlet-class>controlleur.DownloadRecu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controlleur.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransfertServlet</servlet-name>
        <url-pattern>/TransfertServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlerteServlet</servlet-name>
        <url-pattern>/AlerteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RenouServlet</servlet-name>
        <url-pattern>/RenouServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionVhServlet</servlet-name>
        <url-pattern>/GestionVhServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpRecu</servlet-name>
        <url-pattern>/ImpRecu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadRecu</servlet-name>
        <url-pattern>/DownloadRecu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            login.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
